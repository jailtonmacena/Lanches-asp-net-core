@model IEnumerable<LanchesMac.Models.Lanche>

<div>
    <h2>Todos os Lanches</h2>
</div>

<div class="container">
<div class="row">
@foreach(var lanche in Model)
{
    <div class="col-sm-4 cold-md-4 col-lg-4">
         <p><img src="@lanche.ImagemUrl" /></p>
        <h4>@lanche.Nome</h4>
        <h3>Preço : @lanche.Preco.ToString("c")</h3>

         <p class="button">
        <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
        asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@lanche.LancheId">
        Incluir no Carrinho
         </a>
        </p>

    </div>
}
</div>
</div>